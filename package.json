{
  "name": "hypergx",
  "private": true,
  "version": "0.1.0",
  "description": "HyperGX - Electron + React cyberpunk browser shell",
  "main": "electron/dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "vite build",
    "lint": "eslint \"{src,electron}/**/*.{ts,tsx}\" --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "package": "npm run build && npm run build:electron && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "build:electron": "tsc -p tsconfig.node.json"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/modifiers": "^6.1.0",
    "@dnd-kit/sortable": "^7.0.0",
    "@dnd-kit/utilities": "^3.2.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "electron": "^28.0.0",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.445.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.5.2",
    "@radix-ui/react-slot": "^1.0.0",
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-drawer": "^1.0.0",
    "@radix-ui/react-tabs": "^1.0.0",
    "@radix-ui/react-switch": "^1.0.0",
    "@radix-ui/react-slider": "^1.1.0",
    "nanoid": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "wait-on": "^7.2.0",
    "@types/electron": "^1.6.10",
    "@vitejs/plugin-react": "^4.2.1"
  }
}
